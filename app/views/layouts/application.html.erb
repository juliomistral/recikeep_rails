<!DOCTYPE html>

<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="utf-8">
  <title><%= content_for?(:title) ? yield(:title) : "Untitled" %></title>
  <%= csrf_meta_tag %>
  <%= yield(:head) %>

  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <meta name="description" content="">
  <meta name="author" content="">

  <!-- Le styles -->
  <%= stylesheet_link_tag "application" %>
  <style type="text/css">
    #masthead {
      background: url("assets/menu-texture-bg.png") repeat;
      padding-bottom: 20px;
    }

    #masthead-sep {
      background-color: transparent;
      height: 70px;
    }

    .highlight {
      padding: 10px;
      margin: 10px;
    }

      /* Custom container */
    .container {
      margin: 0 auto;
      max-width: 1000px;
      background-color: gainsboro;
    }
    .container > hr {
      margin: 20px 0;
    }

      /* Main marketing message and sign up button */
    .jumbotron {
      text-align: center;
      padding: 20px;
    }
    .jumbotron h1 {
      font-size: 100px;
      line-height: 1;
    }
    .jumbotron .lead {
      font-size: 24px;
      line-height: 1.25;
    }
    .jumbotron .btn {
      font-size: 21px;
      padding: 14px 24px;
    }

      /* Supporting marketing content */
    .marketing {
      margin: 60px 0;
    }
    .marketing p + h4 {
      margin-top: 28px;
    }

    .user-greeting {
      padding-right: 10px;
      padding-top: 20px;
      font-family:'Conv_SpecialElite',Sans-Serif;
      color: #ffffff;
    }
  </style>
</head>


<!--<div class="container">-->
<body>
  <div class="navbar navbar-fixed-top" style="padding-bottom: 20px">
    <div class="navbar-inner">
      <span class="logo pull-left"></span>
      <span class="pull-right user-greeting">
      <% if logged_in? %>
        Welcome <%= current_user.greeting %><p>
        <%= link_to 'My Recipes', recipes_path %> | <%= link_to 'Log out', logout_path %>
      </p>
      <% else %>
        <%= link_to 'Sign up', signup_path %> | <%= link_to 'Log in', login_path %>
      <% end %>
      </span>
    </div>
  </div>

  <div class="container well-large" style="margin-top: 80px">
    <%= yield %>
  </div>

  <!-- Le javascript
  ================================================== -->
  <!-- Placed at the end of the document so the pages load faster -->
  <%= javascript_include_tag "application" %>

</body>
</html>